db.counter.aggregate(
  {
    $group: {
      _id: {
        name: '$ip'
      },
      count: {
        $sum: 1
      }
    }
  }
)

db.counter.aggregate([
	{ 
		$group : {
			_id : { 
				year: { $year: "$timestamp" } , 
				month: { $month: "$timestamp" }, 
				day: { $dayOfMonth: "$timestamp" }
			},
			count: { $sum: 1 }
		}
	},
	{ 
		$sort: { _id: 1 } 
	}
])


